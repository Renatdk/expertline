      <script src="//cdnjs.cloudflare.com/ajax/libs/html5shiv/3.6.1/html5shiv.js" type="text/javascript"></script>
    <![endif]-->

    <%= stylesheet_link_tag "application", :media => "all" %>


  </head>
  <body>
 <div class="container">
    <a href="/"><%=image_tag "logo.png", :size=>"200x200"%></a>
    <%=image_tag "slogan.png", :size=>"450x450"%>

</div>
    <h5>
    <div class="navbar  navbar-static-top">
      <div class="navbar-inner">
        <div class="container">
          <a class="btn btn-navbar" data-target=".nav-collapse" data-toggle="collapse">
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </a>
          <div class="container nav-collapse">
            <ul class="nav">
              <li><%= link_to "Главная", "/"  %></li>
              <li><%= link_to "Оплата и доставка", Page.where(:title=>"Оплата и доставка").first  %></li>
              <li><%= link_to "Прайс-лист", :controller => :static_pages, :action => :price_list   %></li>
              <li><%= link_to "Контакты", Page.where(:title=>"Контакты").first  %></li>
