                <a class="accordion-toggle thumbnail" data-toggle="collapse" data-parent="#accordion3" href="#collapse<%=c.id%>">
                  <%=c.name%>
                  <%if request.url.include?("/subcatalogs/"); cookies[:subcatalog] = request.fullpath; end;%>
